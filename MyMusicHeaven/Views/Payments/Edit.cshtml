@model MyMusicHeaven.Models.Payment

@{
    ViewData["Title"] = "Edit";
}

<style>

    #date {
        width: 50%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        font-family: arial;
    }

    h1 {
        font-family: arial black;
        color: #8f5f5f;
    }

    label {
        font-family: arial black;
    }

    input[type=text], select {
        width: 50%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        font-family: arial;
    }

    input[type=submit] {
        width: 50%;
        background-color: #6d7a76;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-family: arial black;
    }

        input[type=submit]:hover {
            background-color: #8f5f5f;
        }
</style>

<body>
    <h1>Edit</h1>

    <h4>Payment</h4>
    <hr />
    <div >
        <div >
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
                <div >
                    <label asp-for="CustomerName" ></label><br />
                    <input asp-for="CustomerName" />
                    <span asp-validation-for="CustomerName" class="text-danger"></span>
                </div>
                <div >
                    <label asp-for="PaymentDate" ></label><br />
                    <input asp-for="PaymentDate" id="date" />
                    <span asp-validation-for="PaymentDate" class="text-danger"></span>
                </div>
                <div >
                    <label asp-for="TotalPayment"></label><br />
                    <input asp-for="TotalPayment" class="form-control" />
                    <span asp-validation-for="TotalPayment" class="text-danger"></span>
                </div>
                <div >
                    <input type="submit" value="Save" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

</body>
