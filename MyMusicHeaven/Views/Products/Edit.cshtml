@model MyMusicHeaven.Models.Product

@{
    ViewData["Title"] = "Edit";
}

<style>

    #date {
        width: 50%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        font-family: arial;
    }

    h1 {
        font-family: arial black;
        color: #8f5f5f;
    }

    label {
        font-family: arial black;
    }

    input[type=text], select {
        width: 50%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        font-family: arial;
    }

    input[type=submit] {
        width: 50%;
        background-color: #6d7a76;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-family: arial black;
    }

        input[type=submit]:hover {
            background-color: #8f5f5f;
        }
</style>

<body>
    <h1>Edit</h1>

    <h4>Product</h4>
    <hr />
    <div>
        <div>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
                <div>
                    <label asp-for="ProductName" ></label><br />
                    <input asp-for="ProductName" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="StockInDate"></label><br />
                    <input asp-for="StockInDate" id="date" />
                    <span asp-validation-for="StockInDate" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Category"></label><br />
                    <input asp-for="Category" class="form-control" />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="ProductPrice" ></label><br />
                    <input asp-for="ProductPrice" class="form-control" />
                    <span asp-validation-for="ProductPrice" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Rating" ></label><br />
                    <input asp-for="Rating"  />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
                <div >
                    <label asp-for="ProductPicture" style="width: 100%;" ></label><br />
                    @if (Model.ProductPicture != null)
                    {
                        <img id="profilePicture" style="width:350px;height:350px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(Model.ProductPicture))">
                    }
                    else
                    {
                        <img id="profilePicture" style="width:350px;height:350px; object-fit:cover" src="">
                    }@*
                        <img id="productPicture" style="width:350px;height:350px; object-fit:cover" src="">*@
                    <input type="file"
                           accept=".png,.jpg,.jpeg,.gif,.tif"
                           asp-for="ProductPicture"
                           class="form-control"
                           style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
                           onchange="document.getElementById('productPicture').src = window.URL.createObjectURL(this.files[0])" />
                    <span asp-validation-for="ProductPicture" class="text-danger"></span>
                </div>
                <br />
                <div>
                    <input type="submit" value="Save" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

</body>
