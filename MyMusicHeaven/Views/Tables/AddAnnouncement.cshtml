@model MyMusicHeaven.Models.AnnouncementEntity

@{
    ViewData["Title"] = "AddAnnouncement";
}
<style>

    #date {
        width: 50%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        font-family: arial;
    }

    h1 {
        font-family: arial black;
        color: #8f5f5f;
    }

    label {
        font-family: arial black;
    }

    input[type=text], select {
        width: 50%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        font-family: arial ;
    }

    input[type=submit] {
        width: 50%;
        background-color: #6d7a76;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-family: arial black;
    }

        input[type=submit]:hover {
            background-color: #8f5f5f;
        }
</style>
<body>
    <h1>Add New Announcement</h1>

    <hr />
    <div>
        <div>
            <form asp-action="AddEntity" asp-controller="Tables" method="post">
                <!--Function in TableController-->
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div>
                    <label>Artist</label><br />
                    <input asp-for="PartitionKey" />
                    <span asp-validation-for="PartitionKey" class="text-danger"></span>
                </div>
                <div>
                    <label>Announcement Title</label><br />
                    <input asp-for="RowKey" />
                    <span asp-validation-for="RowKey" class="text-danger"></span>
                </div>
                <div>
                    <label>Announcement Release Date</label><br />
                    <input id="date" asp-for="Announcement_Date" />
                    <span asp-validation-for="Announcement_Date" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Announcement"></label><br />
                    <input asp-for="Announcement" />
                    <span asp-validation-for="Announcement" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="SearchAnnouncement">Back to List</a>
    </div>

</body>


